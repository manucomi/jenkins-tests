{
    "name": "mfe-articles",
    "version": "0.0.1",
    "scripts": {
        "build": "dotenv turbo run build -- --concurrency=50%",
        "clean": "npm run clean:build && npm run clean:deps && npm run clean:test",
        "clean:build": "rm -rf .next/ && turbo run clean:build",
        "clean:deps": "rm -rf node_modules/ && turbo run clean:deps",
        "clean:test": "rm -rf .coverage/ && turbo run clean:test",
        "dev": "dotenv turbo run dev",
        "lint": "dotenv turbo run lint --dry-run=json",
        "test": "dotenv turbo run test --concurrency=50%",
        "sb": "npm run -w mfe-articles-app sb",
        "sb:build": "npm run -w mfe-articles-app sb:build",
        "sb:chromatic": "npm run -w mfe-articles-app sb:chromatic"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@testing-library/jest-dom": "6.1.5",
        "@testing-library/react": "14.1.2",
        "@testing-library/user-event": "14.5.1",
        "dotenv-cli": "7.3.0",
        "eslint-config-mfe-articles": "file:packages/eslint-config-mfe-articles",
        "husky": "8.0.3",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "postcss": "8.4.32",
        "postcss-flexbugs-fixes": "5.0.2",
        "postcss-preset-env": "9.3.0",
        "postcss-pxtorem": "6.0.0",
        "postcss-scss": "4.0.9",
        "prettier": "3.1.0",
        "sass": "1.69.5",
        "stylelint": "15.11.0",
        "stylelint-config-sass-guidelines": "10.0.0",
        "stylelint-order": "6.0.3",
        "stylelint-prettier": "4.1.0",
        "turbo": "1.11.2"
    },
    "workspaces": [
        "./apps/*",
        "./packages/*"
    ]
}